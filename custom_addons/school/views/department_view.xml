<odoo> 
    <record id="department_action" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school_table.department</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Mange Department</p>
        </field>
    </record> 

    <record id="department_view_tree" model="ir.ui.view">
        <field name="name">department.tree</field>
        <field name="model">school_table.department</field>
        <field name="arch" type="xml">
            <tree string="Name">
                <field name="name"/> 
            </tree>
        </field>
    </record>

    <!-- <menuitem name="Department" id="department_menu_action" action="department_action" parent="menu_school_tabble_master" />  -->
</odoo>