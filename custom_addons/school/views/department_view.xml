<odoo> 
    <record id="school_department_action" model="ir.actions.act_window">
        <field name="name">Department</field> 
        <field name="res_model">school_table.department</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="department_view_tree" model="ir.ui.view">
        <field name="name">department.tree</field>
        <field name="model">school_table.department</field>
        <field name="arch" type="xml">
            <tree string="Name">
                <field name="name"/> 
            </tree>
        </field>
    </record>

    <menuitem 
        name="Department details" 
        id="department_menu_action"  
        sequence="0"/>

    <menuitem 
        name="Department highlight" 
        id="menu_school_master" 
        parent="department_menu_action"
        action="school_department_action"
        sequence="0"/>

    <!-- <menuitem name="Department" id="department_menu_action" action="department_action" parent="menu_school_tabble_master" />  -->
</odoo>