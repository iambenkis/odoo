<odoo> 
    <record id="school_table_action" model="ir.actions.act_window">
        <field name="name">School</field>
        <field name="res_model">school_table</field>
        <field name="view_mode">tree,form</field>
    </record> 

    <record id="school_view_tree" model="ir.ui.view">
        <field name="name">school_table.tree</field>
        <field name="model">school_table</field>
        <field name="arch" type="xml">
            <tree string="Name">
                <field name="name"/>
                <field name="description"/> 
                <field name="postcode"/>
                <field name="status"/>
                <field name="date_availability" attrs="{'invisible': [('status', '=', False)]}"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

     <record id="view_school_form" model="ir.ui.view">
            <field name="name">school_table.form</field>
            <field name="model">school_table</field>
            <field name="arch" type="xml" >
                <div class="field_body">
                    <h1 class="form_title">My school</h1>
                    <form string="School">
                        <header>
                            <button name="update_status" type="object" string="Update Status"/>
                            <button type="action" name="%(school_table_department_action)d" string="See department"/>
                        </header> 
                        <sheet>
                            <div class="container">
                                <div>
                                    <group>
                                        <field name="name"/>
                                    </group>
                                    <group>
                                        <field name="description"/>
                                    </group>
                                    <group>
                                        <field name="school_of_option"/>
                                    </group>
                                    <group>
                                        <field name="status" widget="checkbox" string="Is there any place ?"/>
                                    </group>
                                </div>
                                <div class="">
                                    <group>
                                        <field name="postcode"/>
                                    </group>
                                    <group>
                                        <field name="date_availability"/>
                                    </group>
                                    <group>
                                        <field name="avg_expected_price"/>
                                    </group>
                                    <group>
                                        <field name="department_id" widget="many2one" options="{'no_create': True}" />
                                    </group>
                                    <group>
                                        <field name="annual_fees" />
                                    </group>
                                </div>
                            </div>
                        </sheet>
                        <notebook>
                            <page string="Description">
                            </page>
                            <page string="History">
                            </page> 
                        </notebook>
                    </form>
                </div>
            </field>
        </record>

        <record id="view_school_search" model="ir.ui.view">
            <field name="name">school.search</field>
            <field name="model">school_table</field>
            <field name="arch" type="xml">
                <search string="School">
                    <field name="name" string="Name" />
                    <field name="description"/>
                    <separator/>
                    <filter string="Electronic Schools" name="filter_electronic" domain="[('school_of_option', '=', 'elo')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Price below 500" name="avg_expected_price"  domain="[('avg_expected_price', '&lt;', 500)]"/>
                    </group> 
                </search>
            </field>
        </record>

        <menuitem 
            id="school_table_menu" 
            name="School Details" 
            action="school_table_action"
            sequence="0"
        />  
        <menuitem 
            id="school_table_menu_display_department" 
            name="School Departments" 
            parent="school_table_menu" 
            sequence="0"/>
        
        <menuitem
            id="school_table_menu_display_department_action"
            name="Department"
            parent="school_table_menu_display_department"
            action="school_table_department_action"
            sequence="0"/>
</odoo>