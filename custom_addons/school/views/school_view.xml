<odoo> 
    <record id="school_table_action" model="ir.actions.act_window">
        <field name="name">School</field>
        <field name="res_model">school_table</field>
        <field name="view_mode">tree,form</field>
    </record> 

    <record id="school_view_tree" model="ir.ui.view">
        <field name="name">school_table.tree</field>
        <field name="model">school_table</field>
        <field name="arch" type="xml">
            <tree string="Name">
                <field name="name"/>
                <field name="description"/> 
                <field name="postcode"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

     <record id="view_school_form" model="ir.ui.view">
            <field name="name">school_table.form</field>
            <field name="model">school_table</field>
            <field name="arch" type="xml" >
                <div class="field_body">
                    <h1 class="form_title">My school</h1>
                    <form string="School">
                        <sheet>
                            <div class="container">
                                <div>
                                    <group>
                                        <field name="name"/>
                                    </group>
                                    <group>
                                        <field name="description"/>
                                    </group>
                                    <group>
                                        <field name="school_of_option"/>
                                    </group>
                                </div>
                                <div class="">
                                    <group>
                                        <field name="postcode"/>
                                    </group>
                                    <group>
                                        <field name="date_availability"/>
                                    </group>
                                    <group>
                                        <field name="avg_expected_price"/>
                                    </group>
                                </div>
                            </div>
                        </sheet>
                    </form>
                </div>
            </field>
        </record>

        <record id="view_school_search" model="ir.ui.view">
            <field name="name">school.search</field>
            <field name="model">school_table</field>
            <field name="arch" type="xml">
                <search string="School">
                    <field name="name" string="Name" />
                    <field name="description"/>
                    <separator/>
                    <filter string="Electronic Schools" name="filter_electronic" domain="[('school_of_option', '=', 'elo')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Price below 500" name="avg_expected_price"  domain="[('avg_expected_price', '&lt;', 500)]"/>
                    </group>
                </search>
            </field>
        </record>

        <menuitem 
            id="school_table_menu_action" 
            name="School Details" 
            sequence="0"
        />  
        <menuitem 
            id="menu_department_master" 
            name="School Department" 
            parent="school_table_menu_action" 
            action="school_table_action"
            sequence="0"/> 
</odoo>