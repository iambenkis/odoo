<odoo>

    <!-- actions opening views on models -->

    <record id="people_action" model="ir.actions.act_window" >
      <field name="name">people11</field>
      <field name="res_model">people</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="context">{'default_is_company': True}</field>
      <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a Contact in your address book
          </p><p>
            Odoo helps you track all activities related to your contacts.
          </p>
        </field>
    </record>

    <record  id="view_people_form" model="ir.ui.view">
      <field name="name">people.form</field>
      <field name="model">people</field>
      <field name="arch" type="xml">
          <div style="padding: 2rem 4rem">
              <form string="people">
                <sheet> 
                  <field name="contact_type" widget="radio" class="o_horizontal" style=""/>
                  <h1 class="form_title">Contact</h1> 
                  <group>
                    <field name="name" string="Name"/>
                  </group>
                  <group>
                    <field name="address"/>
                  </group>
                  <group>
                    <field name="country"/>
                  </group>  
                  <group  attrs="{'invisible': [('country', '!=', 'CO')]}" >
                      <group>
                        <field name="nif" string="NIF"/>
                      </group>
                      <group>
                        <field name="rccm" string="RCCM"/>
                      </group>
                      <group>
                        <field name="id_nat" string="Id. Nat." />
                      </group>
                  </group>  
                  <group>
                      <field name="tva" string="TVA" attrs="{'invisible': [('country', '=', 'CO')]}"  />
                  </group> 
                  <div style="margin: 0;">
                    <notebook> 
                        <page string="Contact &amp; Addresses"></page> 
                        <page string="Sales &amp; Purchases"></page> 
                        <page string="Internal Notes"></page>
                        <page string="Partner Assignment"></page>
                    </notebook>
                  </div>
                </sheet>
            </form>
        </div>
      </field>
    </record>

    <menuitem 
        id="people_menu_action" 
        name="People"
        action="people_action"
    />  
</odoo>